@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

<div class="dropdown-menu dropdown-menu-right">
    <div class="dropdown-header noti-title">
        <h6 class="text-overflow m-0">Welcome!</h6>
    </div>
    @if (SignInManager.IsSignedIn(User))
    {
        <a  class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
            <i class="ni ni-single-02 text-yellow"></i>
            <span>My profile</span>
        </a>
        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Email" title="Manage">
            <i class="ni ni-email-83 text-default"></i>
            <span>Email</span>
        </a>
        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/ChangePassword" title="Manage">
            <i class="ni ni-lock-circle-open text-primary"></i>
            <span>Password</span>
        </a>
        <a class="dropdown-item" asp-controller="Home" asp-action="Contact"> 
            <i class="ni ni-support-16 text-orange"></i>
            <span>Support</span>
        </a>
        <div class="dropdown-divider"></div>
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
            <button type="submit" class="dropdown-item logout">
                <i class="ni ni-user-run"></i>
                <span class="logout">Logout</span>
            </button>
        </form>

         @* <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form> *@
    }
    else
    {
        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Login">
            <i class="ni ni-single-02"></i>
            <span>Login</span>
        </a>

    }
</div>