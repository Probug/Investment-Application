@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


    @if (SignInManager.IsSignedIn(User))
    {
        <ul class="nav navbar-nav justify-content-center" style="background: transparent; padding-top: 0px !important">
            <li class="nav-item submenu dropdown" style="margin-left: 15px;">   
                <span style="color:#ffffff;">@UserManager.GetUserAsync(User).Result.FirstName @UserManager.GetUserAsync(User).Result.LastName</span>
            </li>
        </ul>
    }

