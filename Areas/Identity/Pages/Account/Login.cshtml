@page
    @{
        ViewData["Title"] = "Log in";
        Layout = "~/Views/Shared/_IdentityLayout.cshtml";
    }
@model LoginModel
<style>
    .main-content {
       padding-top: 200px;
       padding-right: 30px;
        padding-left: 30px;
        padding-bottom: 100px;
    }
</style>

<!-- Table -->
<div class="row justify-content-center">
    <div class="col-lg-5 col-md-7">
        <div class="card bg-secondary shadow border-0">
            <div class="card-header bg-transparent pb-5" style="padding-bottom: 20px !important">
                @* <div class="text-muted text-center mt-2 mb-3">
                    <h3>@ViewData["Title"]</h3>
                </div> *@
                <div class="btn-wrapper text-center">
                        <span class="btn-inner--icon">
                            <a asp-controller="Home" asp-action="Index"><img src="~/img/logos/Bitmoon_Flavicon-1.png" style="height: 50px !important;" alt=""></a>
                        </span>
                </div> 
            </div>
            <div class="card-body px-lg-5 py-lg-5">
                <form id="account" method="post">
                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState[string.Empty] != null)
                    {
                        @foreach (var error in @ViewData.ModelState[string.Empty]?.Errors)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <span>@error.ErrorMessage</span>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">Ã—</span>
                                </button>
                            </div>
                        }
                    }
                    <div class="form-group mb-3">
                        <div class="input-group input-group-alternative">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="ni ni-email-83"></i>
                                </span>
                            </div>
                            <input asp-for="Input.Email" class="form-control" placeholder="Email" type="email"/>
                        </div>
                        <span asp-validation-for="Input.Email" class="invalid-feedback" style="display: block"></span>
                    </div>
                    <div class="form-group">
                        <div class="input-group input-group-alternative">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="ni ni-lock-circle-open"></i>
                                </span>
                            </div>
                            <input asp-for="Input.Password" placeholder="Password" type="password" class="form-control"/>
                        </div>
                        <span asp-validation-for="Input.Password" class="invalid-feedback" style="display: block"></span>
                    </div>
                    <div class="custom-control custom-control-alternative custom-checkbox">
                        <input asp-for="Input.RememberMe" class="custom-control-input" id=" customCheckLogin" type="checkbox"/>
                        <label class="custom-control-label" for=" customCheckLogin">
                            <span class="text-muted">@Html.DisplayNameFor(m => m.Input.RememberMe)</span>
                        </label>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary my-4" type="submit">Log Me In</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-6">
                <a id="forgot-password" asp-page="./ForgotPassword" class="text-light">
                    <small>Forgot password?</small>
                </a>
            </div>
            <div class="col-6 text-right">
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-light">
                    <small>Create new account</small>
                </a>
            </div>
             
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}

